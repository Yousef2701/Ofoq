@using The_Top_App.Models;
@model IShcool.ViewModels.Enrollment_VM
@{
    Layout = "_Layout-Identity";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Climate+Crisis&family=Roboto:wght@100;300;400;500;700;900&family=Sigmar+One&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="stylesheet" href="bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Select_Teachers.css">
    <link rel="stylesheet" href="~/css/Steps.css" />
    <title>Subject Page</title>
</head>
<body>
    <div class="scroller"></div>
    <div class="w-100">
        <div class="steps-container d-flex justify-content-between align-items-center">
            <span class="step background-yellow">1</span>
            <span class="step background-yellow">2</span>
            <span class="step before-gray">3</span>
            <span class="last-step c-gray">4</span>
        </div>
    </div>
    <div class="big-container d-flex justify-content-around align-items-center">


        @*General Card*@
        @foreach (string subj in ViewBag.SubjectList)
        {
            <div class="videos-container my-4">
                <h2>@subj</h2>
                @*Teacher Card*@
                @foreach (Teacher teacher in ViewBag.Teachers)
                {
                    if (teacher.Subject == subj)
                    {
                        <div class="card">
                            <div class="image-content">
                                <span class="overlay"></span>

                                <div class="card-image">
                                    <img class="card-img" src="~/UsersImages/@teacher.Image_Url" />
                                </div>
                            </div>

                            <div class="card-content">
                                <h3 id="teacherName">@teacher.Name</h3>
                                <h4>
                                    رقـم التليفـون : <span id="teacherPhone">@teacher.Phone</span>
                                </h4>
                                <form class="btn-form" asp-action="Choose_Teachers" style="display:flex;">
                                    <button class="start-button">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
                                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0m-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                                        </svg>
                                    </button>
                                </form>
                            </div>
                        </div>
                    }

                    @*End of teacher Card*@
                }
            </div>
            @*End of General Card*@
        }
    </div>
    <form asp-action="Choose_Teachers" method="post" class="d-flex justify-content-center align-items-center">
        <input id="getSubjects" asp-for="Subjects" type="text" hidden />
        <input id="getTeacherPhone" asp-for="TeachersPhones" type="text" hidden />
        <button style="width:250px; padding:10px 20px;" type="submit" class="btn">متابعة</button>
    </form>
    <script src="~/js/Choose_Teachers.js"></script>
</body>
</html>